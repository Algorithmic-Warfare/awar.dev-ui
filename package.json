{
  "name": "@awar.dev/ui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "clean": "rm -rf dist",
    "build:lib": "npm run clean && vite build --config vite.config.lib.ts && tsc --project tsconfig.lib.json",
    "preview": "vite preview",
    "generate:tokens": "tsx src/tokens/generate-css.ts",
    "test": "npx playwright test",
    "test:visual": "npx playwright test tests/visual",
    "test:functional": "npx playwright test tests/functional",
    "test:a11y": "npx playwright test tests/a11y"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@radix-ui/react-popover": "^1.1.0"
  },
  "dependencies": {},
  "devDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@radix-ui/react-popover": "^1.1.6",
    "vite": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.6.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@playwright/test": "^1.49.0",
    "@axe-core/playwright": "^4.10.0",
    "tsx": "^4.19.0"
  }
}
